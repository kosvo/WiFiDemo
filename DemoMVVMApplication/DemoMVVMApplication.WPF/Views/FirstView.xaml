<views:MvxWpfView 
             x:Class="DemoMVVMApplication.WPF.Views.FirstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:MvvmCross.Wpf.Views;assembly=MvvmCross.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
          <StackPanel Orientation="Horizontal"> 
            <Label Content="SSID:" />
            <Label Content="{Binding Ssid, Mode=OneWay}" />
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <Label Content="Interface Name:" />
            <Label Content="{Binding InterfaceName, Mode=OneWay}" />
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <Label Content="IsInsecure:" />
            <Label Content="{Binding IsInsecure, Mode=OneWay}" />
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <Label Content="Interface Index:"  />
            <Label Content="{Binding InterfaceId, Mode=OneWay}" />
          </StackPanel>
        </StackPanel>
    </Grid>
</views:MvxWpfView>
